{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "outDir": "./build",
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "typings"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
